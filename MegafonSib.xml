<?xml version="1.0" encoding="UTF-8"?>
<gate>
	<name>MegafonSib</name>
	<caption>Мегафон Сибирь</caption>
	<type>SMS</type>
	<class>HTTP</class>
	<version>2</version>
	<priority>10</priority>
	<country>Россия</country>
	<prefixlist>
		<prefix start="7 923"/>
	</prefixlist>
	<info>
		<maxsymbols>160</maxsymbols>
		<maxunicodesymbols>70</maxunicodesymbols>
		<supportflash>0</supportflash>
		<supportdtdelivery>0</supportdtdelivery>
		<supportunicode>1</supportunicode>
		<captcha>1</captcha>
		<gateurl>http://sibir.megafon.ru/sendsms/</gateurl>
	</info>
	<classprops>
		<encoding>Windows-1251</encoding>
		<pageurl>http://sibir.megafon.ru/sendsms/</pageurl>
		<imageurl>eval('http://sibir.megafon.ru/antirobot/index.php?q='+Html.RegExp('antirobot/index.php\?q=(.*?)&quot;',1))</imageurl>
		<posturl>http://sibir.megafon.ru/sendsms/</posturl>
		<postdata>eval(
			begin
				PostData.Add('tll',SMS['Phone_Number']);
				PostData.Add('txt',SMS['Text']);
				PostData.Add('keystring',SMS['Code']);
				PostData.Add('send','Отправить');
				PostData.Add('smscode',Html.RegExp('name=smscode type=hidden value=&quot;(.*?)&quot;',1));
			end;
		)
		</postdata>
		<success>eval(Html.ExistsStr('принято к отправке'))</success>
		<error>eval(Html.RegExp('&lt;p&gt;&lt;font color=red&gt;(.*?)&lt;br&gt;',1))</error>
	</classprops>
</gate>