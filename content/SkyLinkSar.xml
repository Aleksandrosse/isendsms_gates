<?xml version="1.0" encoding="UTF-8"?>
<gate>
	<name>SkylinkSar</name>
	<caption>Скайлинк Саратов</caption>
	<type>SMS</type>
	<class>HTTP</class>
	<version>1</version>
	<priority>10</priority>
	<country>Россия</country>
	<prefixlist>
		<prefix start="+7 901805" end="+7 901807"/>
	</prefixlist>	
<info>
		<maxsymbols>150</maxsymbols>
		<maxunicodesymbols>70</maxunicodesymbols>
		<supportflash>0</supportflash>
		<supportdtdelivery>0</supportdtdelivery>
		<supportunicode>1</supportunicode>
		<captcha>1</captcha>
		<gateurl>http://skylink64.ru/sms/</gateurl>
	</info>
	<classprops>
		<encoding>Windows-1251</encoding>
		<pageurl>http://skylink64.ru/sms/</pageurl>
		<imageurl>eval('http://skylink64.ru/captcha/?'+HTML.RegExp('http://skylink64.ru/captcha/\?(.*?)&quot;',1))</imageurl>
		<posturl>http://skylink64.ru/sms/</posturl>
		<postdata>eval(
					begin
						PostData.Add('code',Copy(SMS['Phone_Number'],1,3));
						PostData.Add('phone',Copy(SMS['Phone_Number'],4,4));
						PostData.Add('text',SMS['Text']);
						PostData.Add('usercode',SMS['Code']);
					end;
					)
		</postdata>
		<success>eval(HTML.ExistsStr('Ваше сообщение успешно отправлено'))</success>
		<error>eval(begin
						Result:=Html.RegExp('&lt;p class=&quot;error&quot;&gt;(.*?)&lt;/p&gt;',1);
						if Result='Укажите код на картинке' then
							Result:='Неверно указан код';
					end;		
					)</error>
	</classprops>
</gate>