<?xml version="1.0" encoding="UTF-8"?>
<gate>
	<name>AmigoLV</name>
	<caption>Amigo Латвия</caption>
	<type>SMS</type>
	<class>HTTP</class>
	<version>1</version>
	<priority>30</priority>
	<country>Латвия</country>
	<prefixlist>
		<prefix start="+371 262" format="3.3.5"/>
	</prefixlist>
	<info>
		<maxsymbols>137</maxsymbols>
		<maxunicodesymbols>137</maxunicodesymbols>
		<supportflash>0</supportflash>
		<supportdtdelivery>0</supportdtdelivery>
		<supportunicode>0</supportunicode>
		<captcha>1</captcha>
		<supportcheckdelivery>0</supportcheckdelivery>
		<gateurl>http://amigo.lv/ru/#sms</gateurl>
	</info>
	<classprops>
		<encoding>UTF-8</encoding>
		<pageurl>http://amigo.lv/ru/</pageurl>
		<imageurl>eval('http://amigo.lv/sms/captcha.php?'+Html.RegExp('captcha.php\?(.*?)&quot;',1))</imageurl>
		<posturl>http://amigo.lv/sms/?ajax</posturl>
		<postdata>eval(
					begin
						PostData.Add('msisdn',SMS['Phone_Def']+SMS['Phone_Number']);
						PostData.Add('message',SMS['Text']);
						PostData.Add('captcha',SMS['Code']);
					end;
					)
		</postdata>
		<success>eval(HTML.ExistsStr('OK!'))</success>
		<error>eval(HTML.Text)</error>
	</classprops>
</gate>