<?xml version="1.0" encoding="UTF-8"?>
<gate>
	<name>AltaiSv</name>
	<caption>Алтай Связь</caption>
	<type>SMS</type>
	<class>HTTP</class>
	<version>1</version>
	<country>Россия</country>
	<priority>10</priority>
	<prefixlist>
		<prefix start="+7 902140" end="+7 902146"/>
		<prefix start="+7 902997" end="+7 902999"/>
		<prefix start="+7 951344" end="+7 951346"/>
		<prefix start="+7 95200"/>
	</prefixlist>	
	<info>
		<maxsymbols>160</maxsymbols>
		<maxunicodesymbols>160</maxunicodesymbols>
		<supportflash>0</supportflash>
		<supportdtdelivery>0</supportdtdelivery>
		<supportunicode>1</supportunicode>
		<captcha>1</captcha>
		<gateurl>http://www.altaysv.ru/sms/</gateurl>
	</info>
	<classprops>
		<encoding>Windows-1251</encoding>
		<pageurl>http://www.altaysv.ru/sms/</pageurl>
		<imageurl>eval('http://www.altaysv.ru/cgi-bin/mcode.pl?secretcode='+Html.RegExp('mcode.pl\?secretcode=(.*?)''',1))</imageurl>
		<posturl>http://www.altaysv.ru/cgi-bin/send-sms.pl</posturl>
		<handleredirects>1</handleredirects>
		<postdata>eval(
					begin
						PostData.Add('msisdn',SMS['Phone']);
						PostData.Add('code',SMS['Code']);
						PostData.Add('secretcode',Html.RegExp('type=hidden value=''(.*?)''',1));
						PostData.Add('sms',SMS['Text']);
						PostData.Add('charcount',SMS['LeaveSymbols']);
						PostData.Add('button','Послать SMS');
					end;
					)
		</postdata>
		<success>eval(HTML.ExistsStr('Сообщение взято на доставку'))</success>
		<error>eval(HTML.RegExp('&lt;/FORM&gt;(.*?)&lt;/body&gt;',1))</error>
	</classprops>
</gate>