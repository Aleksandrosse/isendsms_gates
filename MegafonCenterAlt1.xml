<?xml version="1.0" encoding="UTF-8"?>
<gate>
	<name>MegafonCenterAlt</name>
	<caption>Мегафон Центр 1</caption>
	<type>SMS</type>
	<class>HTTP</class>
	<version>1</version>
	<priority>10</priority>
	<prefixlist>
		<prefix start="7 92020" end="7 92024"/>
		<prefix start="7 92047" end="7 92059"/>
	</prefixlist>
	<info>
		<maxsymbols>160</maxsymbols>
		<maxunicodesymbols>160</maxunicodesymbols>
		<supportflash>1</supportflash>
		<supportdtdelivery>0</supportdtdelivery>
		<supportunicode>1</supportunicode>
		<captcha>1</captcha>
		<gateurl>http://www.megafoncenter.ru/bel/sms_gate/</gateurl>
	</info>
	<classprops>
		<encoding>Windows-1251</encoding>
		<pageurl>http://www.megafoncenter.ru/bel/sms_gate/</pageurl>
		<imageurl>http://www.megafoncenter.ru/info.php</imageurl>
		<posturl>http://www.megafoncenter.ru/</posturl>
		<postdata>eval(
			begin
				PostData.Add('id',HTML.RegExp('name=''id'' value=''(.*?)''',1));
				PostData.Add('action','submit');
				PostData.Add('Address','+'+SMS['Phone']);
				PostData.Add('code',SMS['Code']);
				PostData.Add('Message',SMS['Text']);
				PostData.Add('Submit','Отправить');
				if (SMS['Flash']) then
					PostData.Add('Flashsm','');
			end;
		)
		</postdata>
		<success>eval(Html.ExistsStr('SMSC принял сообщение'))</success>
		<error>eval(Html.RegExp('&lt;h1&gt;Отправить SMS&lt;/h1&gt;.*?&lt;b&gt;(.*?)&lt;/b&gt;',1))</error>
	</classprops>
</gate>